<Window x:Class="ProjectTFDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ProjectTFDB.Views"
        mc:Ignorable="d"
        Title="ProjectTFDB" Height="800" Width="1280">
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="#111827" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Refresh" Width="110" Margin="0,0,8,0"
                        Command="{Binding RefreshCommand}" />
                <Button Grid.Column="1" Content="Open Cache" Width="110" Margin="0,0,16,0"
                        Command="{Binding OpenCacheFolderCommand}" ToolTip="Open cache folder" />

                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <TextBlock Foreground="White" Text="{Binding SteamStatus}" TextTrimming="CharacterEllipsis" />
                    <TextBlock Foreground="White" Opacity="0.8" Text="{Binding PricesStatus}" TextTrimming="CharacterEllipsis" />
                </StackPanel>

                <TextBlock Grid.Column="3" Foreground="Tomato" Text="{Binding LastError}" TextTrimming="CharacterEllipsis" />
            </Grid>
        </Border>

        <TabControl>
            <TabItem Header="Home">
                <views:HomeView />
            </TabItem>
            <TabItem Header="Inventory">
                <views:InventoryView />
            </TabItem>
            <TabItem Header="Deals">
                <views:DealsView />
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView />
            </TabItem>
            <TabItem Header="Debug">
                <views:DebugView />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
