<UserControl x:Class="ProjectTFDB.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12" Orientation="Vertical" >
            <TextBlock Text="Status" FontSize="18" FontWeight="SemiBold" />
            <TextBlock Text="{Binding SteamStatus}" />
            <TextBlock Text="{Binding PricesStatus}" />
            <TextBlock Text="{Binding SchemaStatus}" />

            <Separator Margin="0,12,0,12" />

            <TextBlock Text="Totals" FontSize="18" FontWeight="SemiBold" />

            <UniformGrid Columns="2" Margin="0,8,0,0">
                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="Key price (ref/key)" Opacity="0.7" />
                    <TextBlock Text="{Binding KeyRef}" FontSize="16" FontWeight="SemiBold" />
                </StackPanel>
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Total value (ref)" Opacity="0.7" />
                    <TextBlock Text="{Binding TotalRef}" FontSize="16" FontWeight="SemiBold" />
                </StackPanel>

                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="Total value (keys + ref)" Opacity="0.7" />
                    <TextBlock FontSize="16" FontWeight="SemiBold">
                        <Run Text="{Binding TotalValueKeysPart, Mode=OneWay}" />
                        <Run Text=" keys + " />
                        <Run Text="{Binding TotalValueRefPart, Mode=OneWay}" />
                        <Run Text=" ref" />
                    </TextBlock>
                </StackPanel>
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Inventory counts" Opacity="0.7" />
                    <TextBlock>
                        <Run Text="{Binding TotalItems, Mode=OneWay}" />
                        <Run Text=" items • " />
                        <Run Text="{Binding TotalStacks, Mode=OneWay}" />
                        <Run Text=" stacks • " />
                        <Run Text="{Binding PricedStacks, Mode=OneWay}" />
                        <Run Text=" priced stacks" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Margin="0,0,12,8">
                    <TextBlock Text="Currency counts" Opacity="0.7" />
                    <TextBlock>
                        <Run Text="{Binding KeysCount, Mode=OneWay}" />
                        <Run Text=" keys • " />
                        <Run Text="{Binding RefinedCount, Mode=OneWay}" />
                        <Run Text=" refined" />
                    </TextBlock>
                </StackPanel>
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Deals" Opacity="0.7" />
                    <TextBlock>
                        <Run Text="{Binding DealsCount, Mode=OneWay}" />
                        <Run Text=" deal candidates" />
                    </TextBlock>
                </StackPanel>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
